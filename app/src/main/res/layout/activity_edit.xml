<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".view.EditActivity">

   <LinearLayout
       android:id="@+id/date"
       android:clickable="true"
       android:onClick="onDatePickClick"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="8dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="20dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

       <ImageView
           android:id="@+id/calendar"
           android:src="@drawable/ic_calendar"
           style="@style/LayoutCenter"/>

       <TextView
           android:id="@+id/date_text"
           style="@style/TextViewBase"
           android:text="August 22"/>

   </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="353dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginBottom="344dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.502"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/date">

        <TextView
            android:id="@+id/price_value"
            style="@style/CardViewValue"
            android:text="23.00"/>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:text="description"
        android:hint="@string/description_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="1"/>

            <Button
                android:id="@+id/button_2"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="2"/>

            <Button
                android:id="@+id/button_3"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="3"/>

            <Button
                android:id="@+id/button_4"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="4"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_5"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="5"/>

            <Button
                android:id="@+id/button_6"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="6"/>

            <Button
                android:id="@+id/button_7"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="7"/>

            <Button
                android:id="@+id/button_8"
                style="@style/CardViewButton"
                android:onClick="onNumberClick"
                android:text="8"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_9"
                android:onClick="onNumberClick"
                style="@style/CardViewButton"
                android:text="9"/>

            <Button
                android:id="@+id/button_0"
                android:onClick="onNumberClick"
                style="@style/CardViewButton"
                android:text="0"/>

            <Button
                android:id="@+id/button_dot"
                android:onClick="onDotClick"
                style="@style/CardViewButton"
                android:text="."/>

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_height="match_parent"
                style="@style/CardViewButton"
                android:onClick="onDeleteClick"
                android:src="@drawable/ic_delete"/>

        </TableRow>

        <Button
            android:id="@+id/button_category"
            style="@style/CardViewButton"
            android:text="CHOOSE CATEGORY"/>
    </TableLayout>

</android.support.constraint.ConstraintLayout>