<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LayoutCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewBase" parent="LayoutCenter">
        <item name="android:textAppearance">@style/Text.Primary</item>
    </style>

    <style name="CardViewValue" parent="LayoutCenter">
        <item name="android:textAppearance">@style/EditText</item>
    </style>

    <style name="CardViewButton">
        <item name="android:textAppearance">@style/EditText</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_marginLeft">@dimen/table_margin</item>
        <item name="android:layout_marginRight">@dimen/table_margin</item>
        <item name="android:layout_marginTop">@dimen/table_margin</item>
        <item name="android:layout_marginBottom">@dimen/table_margin</item>
        <item name="android:layout_weight">1</item>


    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
